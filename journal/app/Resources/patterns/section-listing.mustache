<section class="section-listing-wrapper" id="{{id}}">
  {{#listHeading}}
    {{> patterns/list-heading}}
  {{/listHeading}}
  <ol class="section-listing {{#singleLine}}section-listing--single-line{{/singleLine}}" {{#labelledBy}}aria-labelledby="{{labelledBy}}"{{/labelledBy}}>
    {{#sections}}
      <li class="section-listing__list_item {{#isCurrent}}section-listing__list_item--current{{/isCurrent}}">
        <a href="{{{url}}}" class="section-listing__list_link">{{{name}}}</a>
      </li>
    {{/sections}}
  </ol>
  {{> patterns/to-top-link}}
  {{#context}}
  {{#renderArticleTypes}}
  <h3>
    <p class="lead-para">In addition to standard research articles, explore our:</p>
  </h3>
  <ol class="section-listing {{#singleLine}}section-listing--single-line{{/singleLine}}" id="section-listing--types">

    <li class="section-listing__list_item section-listing__list_item--current">
      <a href="book-reviews" class="section-listing__list_link">Book reviews</a>
    </li>
    <li class="section-listing__list_item section-listing__list_item--current">
      <a href="data-watch" class="section-listing__list_link">Data watch</a>
    </li>
    <li class="section-listing__list_item section-listing__list_item--current">
      <a href="research-notes" class="section-listing__list_link">Research notes</a>
    </li>
    <li class="section-listing__list_item section-listing__list_item--current">
      <a href="software-reviews" class="section-listing__list_link">Software reviews</a>
    </li>
  </ol>
  {{/renderArticleTypes}}
  {{/context}}
</section>
