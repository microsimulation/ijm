{{! To be valid HTML, this pattern must be included as a partial within a <dl> }}
<dt class="additional-asset__text" id="{{assetId}}">
  {{#captionText}}
    {{> patterns/caption-text}}
  {{/captionText}}
</dt>

<dd class="additional-asset__access">

  {{#doi}}
    {{> patterns/doi}}
  {{/doi}}

  {{^doi}}
    <a class="additional-asset__link" href="{{nonDoiLink}}">{{{nonDoiLink}}}</a>
  {{/doi}}

  {{#downloadLink}}
    <div>
      <a class="additional-asset__link additional-asset__link--download" href="{{url}}"{{#fileName}} download="{{fileName}}"{{/fileName}}>{{{downloadLink.name}}}</a>
    </div>
  {{/downloadLink}}
</dd>
